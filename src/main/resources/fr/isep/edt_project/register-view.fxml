<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.isep.edt_project.controller.RegisterController"
      stylesheets="@css/register-style.css">
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="S'inscrire" />
    <Label text="Nom" />
    <TextField fx:id="nameField" promptText="Entrez votre nom" />
    <Label text="login (email)" />
    <TextField fx:id="loginField" promptText="Entrez votre email" />
    <Label text="Mot de passe :" />
    <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" />
    <Label text="Confirmez votre mot de passe :" />
    <PasswordField fx:id="checkPasswordField" promptText="Confirmez votre mot de passe" />
    <Button fx:id="registerButton" text="S'inscrire" />
    <Button fx:id="backButton" text="Retour" />
</VBox>
