<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.isep.edt_project.controller.LoginController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Formulaire d'authentification" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <Label text="Login (votre email) :" />
    <TextField fx:id="loginField" promptText="Entrez votre email" />
    <Label text="Mot de passe :" />
    <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" />
    <Button fx:id="loginButton" text="Se connecter" />
    <Button fx:id="registerButton" text="Je n'ai pas un compte" />
</VBox>